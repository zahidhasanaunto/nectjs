{
  "name": "nectjs",
  "version": "1.0.0",
  "description": "Next generation node.js framework",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zahidhasanaunto/nectjs.git"
  },
  "keywords": [
    "nectjs",
    "nodejs",
    "typescript",
    "koa",
    "typeorm",
    "api"
  ],
  "author": "Zahid Hasan",
  "license": "GPL3",
  "bugs": {
    "url": "https://github.com/zahidhasanaunto/nectjs/issues"
  },
  "homepage": "https://github.com/zahidhasanaunto/nectjs#readme",
  "scripts": {
    "dev": "npm run build && npm run watch-debug",
    "build": "npm run build-ts && npm run tslint",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "start": "npm run build && npm run serve",
    "serve": "cross-env NODE_ENV=production node dist/server.js",
    "watch-node": "cross-env NODE_ENV=production nodemon dist/server.js",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "serve-debug": "cross-env NODE_ENV=development nodemon --inspect dist/server.js",
    "test": "npm run unit:test && npm run e2e:test",
    "unit:test": "npm run build-ts && cross-env NODE_ENV=test mocha ./dist/db/repositories/*.test.js --timeout 5000 --exit",
    "e2e:test": "npm run build-ts && cross-env NODE_ENV=test mocha ./dist/app/controllers/**/*.controller.test.js --timeout 5000 --exit"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "config": "^3.2.4",
    "dotenv": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.20",
    "typeorm-typedi-extensions": "^0.2.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.6",
    "@types/chai-http": "^4.2.0",
    "@types/config": "0.0.36",
    "@types/dotenv": "^8.2.0",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.0.42",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/shelljs": "^0.8.6",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "cross-env": "^6.0.3",
    "fs-extra": "^8.1.0",
    "husky": "^3.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.1",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.7.2",
    "write": "^2.0.0",
    "yargs": "^15.0.2"
  },
  "bin": {
    "n-api-builder": "./lib/api-builder/index.js"
  }
}
